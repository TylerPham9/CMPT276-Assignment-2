<div class="container">
<h1>Listing students</h1>
<p>
  <% @s.each do |ss| %>
  <%= ss %> <br />
  <% end %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.to_a.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.color %></td>
        <td><%= student.height %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', students_edit_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New students', new_student_path %>

</div>